{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
